<!--pages/cart/cart.wxml-->

<block wx:for="{{cartList}}" wx:key="index">
  <view>
    <van-checkbox value="{{ checked }}" bind:change="onChange" style="font-weight:bold">{{item.name}}</van-checkbox>

  </view>
  <view class="card">
    <van-card>
      <view slot="thumb">
        <image src="{{ item.imageURL }}" class="image"></image>
      </view>
      <view slot="price" class="price">
        <text>￥ {{item.price}} </text>
        <text class="cutprice">{{item.highPrice}}</text>
      </view>
      <view slot="desc">
        <block wx:for="{{item.discount}}" wx:if="{{index<2}}" wx:key="index">
          <view class="discount">{{item}}</view>
        </block>
      </view>
      <view slot="title" class="title">{{ item.title }}</view>
      <view slot="footer" class="footer">

        <button bindtap="cutCount" class="footer-left" size="mini">
          <view>-</view>
        </button>

        <view class="footer-middle">{{item.count}}</view>

        <button bindtap="addCount" size="mini" class="footer-right">
          <view>+</view>
        </button>

      </view>
    </van-card>
  </view>
</block>

<van-submit-bar price="{{ 3050 }}" button-text="提交订单" bind:submit="onClickButton" tip="{{ true }}">
  <van-tag type="primary">标签</van-tag>
  <view slot="tip">您的收货地址不支持同城送, <text>修改地址</text></view>
</van-submit-bar>