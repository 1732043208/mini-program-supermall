/* pages/cart/childCpns/cart-list-item/cart-list-item.wxss */
.box {
  margin: 20rpx 10rpx 0 10rpx;
  background-color: #FFFFFF;
  padding-top: 20rpx;
  padding-bottom: 1rpx;
  border-radius: 30rpx;
}

.item-icon {
  margin-left: 30rpx;
  padding-bottom: 10rpx;
  position: relative;
}

.icon {
  position: absolute;
  top: 10rpx;
  right: 40rpx;
}

.store {
  font-weight: bold;
  margin-left: 20rpx;
  position: absolute;
  top: 10rpx;
  left: 64rpx;
  font-size: 34rpx;
}

.shopLogo {
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
}

.card {
  position: relative;
  margin-bottom: 30rpx;

}

.title {
  font-size: 30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price {
  padding-top: 10rpx;
  color: red;
  font-weight: bold;
  font-size: 34rpx;
}

.image {
  width: 160rpx;
  height: 200rpx;
  border-radius: 12rpx
}

.cutprice {
  text-decoration: line-through;
  color: #000;
  font-size: 26rpx;
  font-weight: normal;
}

.discount {
  float: left;
  border: 1rpx solid #ff5777;
  margin-right: 20rpx;
  margin-top: 10rpx;
  padding: 2rpx 6rpx 2rpx 6rpx;
  color: #ff5777;

}

.footer {
  display: flex;
  position: absolute;
  right: 14px;
  top: 156rpx;
  text-align: center;
}

.footer-left {
  width: 20rpx;
  height: 80rpx;
  border-radius: 2px;
  border: 1px solid #EAEAEA;
  background-color: #fff;
}

.footer-middle {
  width: 60rpx;
  border-top: 1px solid #EAEAEA;
  border-bottom: 1px solid #EAEAEA;

}

.footer-right {
  line-height: 30rpx;
  width: 20rpx;
  height: 40rpx;
  border-radius: 2px;
  border: 1px solid #EAEAEA;
  background-color: #fff;
  padding-right: 50rpx;
}