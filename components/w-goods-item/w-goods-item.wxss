/* components/w-goods-item/w-goods-item.wxss */
.goods-item {
  text-align: center;
  color: #333;
  padding-bottom: 85rpx;
}

.image {
  width: 100%;
  border-radius: 10rpx;
  height: 540rpx;
}

.desc-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 5rpx;
}

.title { 
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 30rpx;
}

.info {
  font-size: 26rpx;
}

.info>.price {

  color: #ff5777;
}

.info>.cfav {
 
  position: relative;
}

.info>.icon {
  width: 30rpx;
  height: 30rpx;
  padding: 0 6rpx 0 30rpx;
  position: relative;
  top: 5rpx;
}

