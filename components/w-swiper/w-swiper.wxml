<!--components/w-swiper/w-swiper.wxml-->
<swiper circular="true" autoplay="true" interval="3000" duration="300" indicator-dots="true"
  indicator-active-color="#ff5777" 
  style="{{isShow ? 'height:600rpx':''}}">
  <block wx:for="{{list}}" wx:key="index">
    <swiper-item class="swiper-item">
      <scroll-view>
        <image src="{{item}}" mode="widthFix" style="width:100%;height:100%" />
      </scroll-view>

    </swiper-item>
  </block>
</swiper>